@*Details for LeaderBoard*@

@model IAmSpeed.Models.LeaderBase

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

@foreach(var r in Model.data)
{
    foreach(var p in r.runs)
    {
        <p>@p.place</p>
        <p>@p.run.times.timeInMinutes</p>
    }
}

